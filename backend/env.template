# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/educational-web
# OR use MongoDB Atlas
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# JWT Configuration
JWT_ACCESS_SECRET=your_super_secret_access_token_key_here_change_this
JWT_REFRESH_SECRET=your_super_secret_refresh_token_key_here_change_this
JWT_ACCESS_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Email Configuration (for email verification and password reset)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_app_password
EMAIL_FROM=noreply@educationalweb.com

# Frontend URL (for CORS and email links)
FRONTEND_URL=http://localhost:3000

# Admin Credentials (for seed script)
ADMIN_NAME=Admin
ADMIN_EMAIL=admin@educationalweb.com
ADMIN_PASSWORD=Admin@123


# Payment Gateway - Paymob Configuration
# Get these from: https://accept.paymob.com/portal2/en/pay/
PAYMOB_API_KEY=your_paymob_api_key_here
PAYMOB_PUBLIC_KEY=your_paymob_public_key_here
PAYMOB_INTEGRATION_ID=your_paymob_integration_id_here
PAYMOB_IFRAME_ID=your_paymob_iframe_id_here
PAYMOB_HMAC=your_paymob_hmac_secret_here

# DEMO MODE - For UI testing without real Paymob (remove in production!)
# Set to 'true' to bypass Paymob and simulate successful payments
# WARNING: This will activate premium without real payment!
PAYMOB_DEMO_MODE=false

